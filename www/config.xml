<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.sebi.awesome" version="1.0.0">
	<name>AwesomeClient</name>

	<description>
		A sample Apache Cordova application that responds to the
		deviceready
		event.
	</description>

	<author href="http://aerogear.org/" email="aerogear-dev@lists.jboss.org">
		JBoss by Red Hat
	</author>

	<content src="index.html" />

	<access origin="*" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="true" />

	<feature name="App">
		<param name="android-package" value="org.apache.cordova.App" />
	</feature>
	<feature name="Android Support v4">
		<param name="id" value="android.support.v4" />
	</feature>
	<feature name="Google Play Services for Android">
		<param name="id" value="com.google.playservices" />
	</feature>
	<feature name="PushPlugin">
		<param name="android-package" value="org.jboss.aerogear.cordova.push.PushPlugin" />
		<param name="ios-package" value="PushPlugin" />
	</feature>
	<feature name="AeroGear PushPlugin">
		<param name="id" value="org.jboss.aerogear.cordova.push" />
	</feature>
	<feature name="InAppBrowser">
		<param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
		<param name="ios-package" value="CDVInAppBrowser" />
		<param name="id" value="org.apache.cordova.inappbrowser" />
	</feature>

</widget>